---
import Colors from "@/assets/Colors.astro";
import Hunter from "@/assets/Hunter.astro";
import Users from "@/assets/Users.astro";
import Dots from "@/assets/Dots.astro";

const { pathname } = Astro.url;
const isHome = pathname === "/";
---

<footer
  class="pointer-events-none fixed bottom-0 flex w-full items-end justify-center gap-4 p-6"
>
  <nav
    class="pointer-events-auto flex rounded-full bg-black px-4 text-neutral-400"
  >
    <a href="/colors" class="p-4">
      <Colors class="size-6" />
    </a>

    {
      isHome && (
        <aside class="flex items-center gap-4">
          <button
            id="color_output"
            class="pointer-events-auto size-14 scale-110 shrink-0 cursor-pointer rounded-full border-2 border-white shadow"
          />
        </aside>
      )
    }

    {
      !isHome && (
        <a href="/" class="p-4">
          <Hunter class="size-6" />
        </a>
      )
    }

    <a href="/online" class="p-4">
      <Users class="size-6" />
    </a>
  </nav>
</footer>
